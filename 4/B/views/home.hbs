<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Collection</title>
    <link rel="stylesheet" href="../assets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar" style="background-color: rgb(192, 191, 191);">
        {{#if isLogin}}
        <form class="container-fluid justify-content-end">
            <h5 style="padding-right: 1500px;">{{user.fullname}}</h5>
            <a href="/logout"><button class="btn btn-sm btn-outline-secondary" type="button">Logout</button></a>
            {{else}}
            <a href="/login" style="padding-left: 1700px;"><button class="btn" style="" type="button">Login</button></a>
            <a href="/register" style="padding-right: 50px;"><button class="btn btn-sm btn-outline-secondary"
                    type="button">Register</button></a>
        </form>
        {{/if}}
    </nav>

    {{#if isLogin}}
    <div class="container mx-auto mt-4">
        <div class="row">
            <h1 style="color: aliceblue; padding-bottom: 40px;">COLLECTION !</h1>


            <!-- COLECCTION -->
            {{#each data}}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <a href="/edit-task"><img src="https://cdn-icons-png.flaticon.com/512/4345/4345800.png"
                            class="card-img-top" alt="..."></a>
                    <div class="card-body">
                        <h1 class="card-title">{{this.name}}</h1>
                        <h5> 123</h5>
                        <p style="text-align: end;">{{fullname}}</p>
                        <a href="/edit-collection/{{this.id}}" class="btn "><i class="fab fa-github"></i>Edit</a>
                        <a href="/delete-collection/{{this.id}}" class="btn "><i class="fab fa-github"></i>Delete</a>
                    </div>
                </div>
            </div>
            {{/each}}
            <!-- plus collection -->
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <a href="/add-collection"><img
                            src="https://img.freepik.com/free-vector/plus-symbol-brush-stroke-typography-vector_53876-166821.jpg"
                            class="card-img-top" alt="..."></a>
                </div>
            </div>

        </div>
    </div>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>